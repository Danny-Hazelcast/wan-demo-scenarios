<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<hazelcast xmlns="http://www.hazelcast.com/schema/config" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.hazelcast.com/schema/config                                http://www.hazelcast.com/schema/config/hazelcast-config-5.0.xsd">

    <properties>
        <property name="hazelcast.phone.home.enabled">false</property>
        <property name="hazelcast.partition.count">271</property>
    </properties>



    <network>
        <port auto-increment="true" port-count="200">5701</port>
        <join>
            <multicast enabled="false"/>
            <tcp-ip enabled="true">
            </tcp-ip>
        </join>
    </network>

    <serialization>
        <data-serializable-factories>
            <data-serializable-factory factory-id="1">hzcmd.model.EmployeeDataSerializableFactory</data-serializable-factory>
            <data-serializable-factory factory-id="7891">hzcmd.model.person.PersonIdentifiedDataSerializableFactory</data-serializable-factory>
        </data-serializable-factories>

        <portable-version>0</portable-version>
        <portable-factories>
            <portable-factory factory-id="1239">hzcmd.model.person.PersonPortableFactory</portable-factory>
        </portable-factories>
    </serialization>

    <hot-restart-persistence enabled="true">
        <data-load-timeout-seconds>1700</data-load-timeout-seconds>
        <base-dir>hot-junk</base-dir>
    </hot-restart-persistence>

    <native-memory allocator-type="POOLED" enabled="true">
        <size unit="GIGABYTES" value="1"/>
    </native-memory>

    <cache name="cacheBak0HD*">
        <in-memory-format>NATIVE</in-memory-format>
        <backup-count>0</backup-count>
        <statistics-enabled>false</statistics-enabled>
        <eviction eviction-policy="LRU" max-size-policy="FREE_NATIVE_MEMORY_PERCENTAGE" size="15"/>
        <hot-restart enabled="true">
            <fsync>true</fsync>
        </hot-restart>
    </cache>

    <cache name="cacheBak1HD*">
        <in-memory-format>NATIVE</in-memory-format>
        <backup-count>1</backup-count>
        <statistics-enabled>false</statistics-enabled>
        <eviction eviction-policy="LRU" max-size-policy="FREE_NATIVE_MEMORY_PERCENTAGE" size="15"/>
        <hot-restart enabled="true">
            <fsync>false</fsync>
        </hot-restart>
    </cache>

    <cache name="cacheAsync1HD*">
        <in-memory-format>NATIVE</in-memory-format>
        <backup-count>0</backup-count>
        <async-backup-count>1</async-backup-count>
        <statistics-enabled>false</statistics-enabled>
        <eviction eviction-policy="LRU" max-size-policy="FREE_NATIVE_MEMORY_PERCENTAGE" size="15"/>
        <hot-restart enabled="true">
            <fsync>false</fsync>
        </hot-restart>
    </cache>


    <cache name="cacheBak0*">
        <in-memory-format>BINARY</in-memory-format>
        <backup-count>0</backup-count>
        <statistics-enabled>false</statistics-enabled>
        <hot-restart enabled="true">
            <fsync>false</fsync>
        </hot-restart>
    </cache>

    <cache name="cacheBak1*">
        <in-memory-format>BINARY</in-memory-format>
        <backup-count>1</backup-count>
        <statistics-enabled>false</statistics-enabled>
        <hot-restart enabled="true">
            <fsync>false</fsync>
        </hot-restart>
    </cache>

    <cache name="cacheAsync1*">
        <in-memory-format>BINARY</in-memory-format>
        <backup-count>0</backup-count>

        <async-backup-count>1</async-backup-count>
        <statistics-enabled>false</statistics-enabled>
        <hot-restart enabled="true">
            <fsync>false</fsync>
        </hot-restart>
    </cache>


    <map name="mapBak0HD*">
        <backup-count>0</backup-count>
        <in-memory-format>NATIVE</in-memory-format>

        <merkle-tree enabled="false" ></merkle-tree>

        <hot-restart enabled="true">
            <fsync>true</fsync>
        </hot-restart>
        <eviction eviction-policy="LRU" max-size-policy="FREE_NATIVE_MEMORY_PERCENTAGE" size="15"/>
    </map>

    <map name="mapBak1HD*">
        <backup-count>1</backup-count>
        <in-memory-format>NATIVE</in-memory-format>

        <merkle-tree enabled="false" ></merkle-tree>

        <indexes>
            <index name="a" type="SORTED">
                <attributes>
                    <attribute>personId</attribute>
                </attributes>
            </index>
        </indexes>

        <hot-restart enabled="true">
            <fsync>false</fsync>
        </hot-restart>
        <eviction eviction-policy="LRU" max-size-policy="FREE_NATIVE_MEMORY_PERCENTAGE" size="15"/>
    </map>

    <map name="mapBak1HDIdle*">
        <backup-count>1</backup-count>
        <in-memory-format>NATIVE</in-memory-format>

        <merkle-tree enabled="false" ></merkle-tree>

        <max-idle-seconds>1</max-idle-seconds>

        <indexes>
            <index name="a" type="SORTED">
                <attributes>
                    <attribute>personId</attribute>
                </attributes>
            </index>
        </indexes>

        <hot-restart enabled="true">
            <fsync>false</fsync>
        </hot-restart>
        <eviction eviction-policy="LRU" max-size-policy="FREE_NATIVE_MEMORY_PERCENTAGE" size="15"/>
    </map>

    <map name="mapAsync1HD*">
        <backup-count>0</backup-count>
        <async-backup-count>1</async-backup-count>
        <in-memory-format>NATIVE</in-memory-format>

        <merkle-tree enabled="false" ></merkle-tree>

        <hot-restart enabled="true">
            <fsync>false</fsync>
        </hot-restart>
        <eviction eviction-policy="LRU" max-size-policy="FREE_NATIVE_MEMORY_PERCENTAGE" size="15"/>
    </map>


    <map name="mapBak0*">
        <in-memory-format>BINARY</in-memory-format>
        <backup-count>0</backup-count>

        <merkle-tree enabled="true" ></merkle-tree>

        <hot-restart enabled="true">
            <fsync>false</fsync>
        </hot-restart>
    </map>

    <map name="mapBak1*">
        <in-memory-format>BINARY</in-memory-format>
        <backup-count>1</backup-count>

        <merkle-tree enabled="true" ></merkle-tree>

        <indexes>
            <index name="a" type="SORTED">
                <attributes>
                    <attribute>personId</attribute>
                </attributes>
            </index>
        </indexes>

        <hot-restart enabled="true">
            <fsync>false</fsync>
        </hot-restart>
    </map>

    <map name="mapAsync1*">
        <in-memory-format>BINARY</in-memory-format>
        <backup-count>0</backup-count>
        <async-backup-count>1</async-backup-count>

        <merkle-tree enabled="true" ></merkle-tree>

        <hot-restart enabled="true">
            <fsync>false</fsync>
        </hot-restart>
    </map>

</hazelcast>